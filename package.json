{
  "name": "react-redux-express-es6-boilerplate",
  "version": "1.0.0",
  "description": "React Redux Express ES6 boilerplate",
  "scripts": {
    "postinstall": "bower install --allow-root",
    "build-client": "rimraf public/dist && webpack --progress --verbose --display-error-details --config webpack.config.js",
    "build-server": "rimraf dist && babel src/server --out-dir dist",
    "build-tests": "babel test/server --out-dir dist",
    "build": "npm run build-client && npm run build-server",
    "prestart": "npm run jshint && npm run build-server",
    "start": "node dist/server.js",
    "jshint": "jshint ./src/server",
    "eslint": "eslint ./src/client",
    "lint": "npm run jshint && npm run eslint",
    "dev": "nodemon --exec babel-node src/server/server.js",
    "test": "mocha --compilers js:babel-core/register ./test/**/*.spec.js"
  },
  "author": "Javier Luca de Tena",
  "dependencies": {
    "babel-polyfill": "^6.16.0",
    "body-parser": "^1.15.2",
    "es6-promise": "^4.0.5",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "q": "^1.4.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.0",
    "redux-thunk": "^2.1.0",
    "request": "^2.76.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-promise": "^3.0.0",
    "eslint-plugin-react": "^6.4.1",
    "eslint-plugin-standard": "^2.0.1",
    "jshint": "^2.9.4",
    "mocha": "^3.1.2",
    "nock": "^9.0.0",
    "nodemon": "^1.11.0",
    "redux-devtools": "^3.3.1",
    "webpack": "^1.13.2"
  }
}
